<!-- 评论容器 -->
<div class="comment">
    <div class="comment-inner">

        <div class="comment-main">
            <textarea></textarea><a class="comment-attach"></a>

            <div class="comment-delete hide"></div>
            <div class="comment-limit hide"></div>
        </div>

        <div class="comment-bar">

            <a class="comment-checkbox" data-name="share">
                <span class="checkbox-model"><em></em></span><label>提醒共享人</label>
            </a>

            <a class="comment-checkbox" data-name="creator">
                <span class="checkbox-model"><em></em></span><label>提醒创建人</label>
            </a>

            <a class="comment-send">发送</a>
        </div>
    </div>
</div>